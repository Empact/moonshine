[client]
default-character-set   = <%= configatron.mysql.retrieve('default-character-set', 'utf8') %>

[mysqld]
######### character sets
character_set_server    = <%= configatron.mysql.retrieve('character_set_server', 'utf8') %>
collation_server        = <%= configatron.mysql.retrieve('collation_server', 'utf8_general_ci') %>

######### innodb options
innodb_buffer_pool_size           = <%= configatron.mysql.retrieve('innodb_buffer_pool_size', '128M') %>
innodb_additional_mem_pool_size   = <%= configatron.mysql.retrieve('innodb_additional_mem_pool_size', '16M') %>
innodb_data_file_path             = <%= configatron.mysql.retrieve('innodb_data_file_path', 'ibdata1:10M:autoextend') %>
innodb_file_io_threads            = <%= configatron.mysql.retrieve('innodb_file_io_threads', '4') %>
innodb_thread_concurrency         = <%= configatron.mysql.retrieve('innodb_thread_concurrency', '4') %>
innodb_flush_log_at_trx_commit    = <%= configatron.mysql.retrieve('innodb_flush_log_at_trx_commit', '2') %>
innodb_log_buffer_size            = <%= configatron.mysql.retrieve('innodb_log_buffer_size', '64M') %>
innodb_log_file_size              = <%= configatron.mysql.retrieve('innodb_log_file_size', '80M') %>
innodb_log_files_in_group         = <%= configatron.mysql.retrieve('innodb_log_files_in_group', '3') %>
innodb_file_per_table             = <%= configatron.mysql.retrieve('innodb_file_per_table', '1') %>
innodb_max_dirty_pages_pct        = <%= configatron.mysql.retrieve('innodb_max_dirty_pages_pct', '90') %>
innodb_lock_wait_timeout          = <%= configatron.mysql.retrieve('innodb_lock_wait_timeout', '120') %>

######### general
connect_timeout       = <%= configatron.mysql.retrieve('connect_timeout', '10') %>
back_log              = <%= configatron.mysql.retrieve('back_log', '50') %>
max_connections       = <%= configatron.mysql.retrieve('max_connections', '10') %>
max_connect_errors    = <%= configatron.mysql.retrieve('max_connect_errors', '10') %>
table_cache           = <%= configatron.mysql.retrieve('table_cache', '2048') %>
max_allowed_packet    = <%= configatron.mysql.retrieve('max_allowed_packet', '32M') %>
open_files_limit      = <%= configatron.mysql.retrieve('open_files_limit', '1024') %>
max_heap_table_size   = <%= configatron.mysql.retrieve('max_heap_table_size', '64M') %>
join_buffer_size      = <%= configatron.mysql.retrieve('join_buffer_size', '4M') %>
read_buffer_size      = <%= configatron.mysql.retrieve('read_buffer_size', '4M') %>
sort_buffer_size      = <%= configatron.mysql.retrieve('sort_buffer_size', '8M') %>
read_rnd_buffer_size  = <%= configatron.mysql.retrieve('read_rnd_buffer_size', '8M') %>
thread_cache_size     = <%= configatron.mysql.retrieve('thread_cache_size', '8') %>
thread_concurrency    = <%= configatron.mysql.retrieve('thread_concurrency', '8') %>
query_cache_size      = <%= configatron.mysql.retrieve('query_cache_size', '128M') %>
query_cache_limit     = <%= configatron.mysql.retrieve('query_cache_limit', '2M') %>
thread_stack          = <%= configatron.mysql.retrieve('thread_stack', '192K') %>
transaction_isolation = <%= configatron.mysql.retrieve('transaction_isolation', 'READ-COMMITTED') %>
tmp_table_size        = <%= configatron.mysql.retrieve('tmp_table_size', '128M') %>
tmpdir                = <%= configatron.mysql.retrieve('tmpdir', '/tmp') %>
log_slow_queries      = <%= configatron.mysql.retrieve('log_slow_queries', '/var/log/mysql/mysql-slow.log') %>
long_query_time       = <%= configatron.mysql.retrieve('long_query_time', '5') %>

<%= configatron.mysql.retrieve('extra', '') %>